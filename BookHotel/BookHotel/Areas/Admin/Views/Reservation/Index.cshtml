@model IEnumerable<BookHotel.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Rezervasyonlar</h1>

<p>
    <a asp-area="guest" asp-controller="reservation" asp-action="Index">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice) (₺)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice) ₺
                </td>
                <td>
                    <a asp-area="admin" asp-controller="reservation" asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                    <a asp-area="admin" asp-controller="reservation" asp-action="Delete" asp-route-reservationId="@item.Id" asp-route-reservationDetailId="@item.ReservationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
